{
  "$schema": "https://schema.tauri.app/config/1",
  "build": {
    "beforeDevCommand": "cd ../ui && npm run dev",
    "beforeBuildCommand": "",
    "devPath": "http://localhost:3030",
    "distDir": "../ui/dist"
  },
  "package": {
    "productName": "Local Browser Agent",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "dialog": {
        "all": false,
        "open": true,
        "save": true
      },
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "Copyright Â© 2025 AI-on-Cloud",
      "publisher": "AI-on-Cloud",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.stepfunctions.local-browser-agent",
      "longDescription": "Local browser agent for Step Functions Activity-based browser automation using Nova Act",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": ["../python", "../examples"],
      "shortDescription": "Local browser agent for Step Functions",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": "default-src 'self'; connect-src 'self' http://localhost:3030 ws://localhost:3030; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'"
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 700,
        "resizable": true,
        "title": "Local Browser Agent",
        "width": 1000,
        "minWidth": 800,
        "minHeight": 600
      }
    ]
  }
}
