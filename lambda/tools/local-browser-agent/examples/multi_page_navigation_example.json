{
  "name": "Multi-Page Navigation Demo",
  "description": "Demonstrates complex navigation across multiple pages, tab management, and maintaining context across page transitions",
  "starting_page": "https://books.toscrape.com/",
  "abort_on_error": false,
  "steps": [
    {
      "action": "act_with_schema",
      "prompt": "What is the title of the first book on the page?",
      "schema": {
        "type": "object",
        "properties": {
          "first_book_title": {"type": "string"},
          "page_number": {"type": "number"}
        },
        "required": ["first_book_title"]
      },
      "description": "Record first page information"
    },
    {
      "action": "act",
      "prompt": "Click on the 'next' button or page 2 link to go to the next page of books",
      "description": "Navigate to page 2"
    },
    {
      "action": "act_with_schema",
      "prompt": "What is the title of the first book on this page?",
      "schema": {
        "type": "object",
        "properties": {
          "first_book_title": {"type": "string"},
          "page_number": {"type": "number"}
        },
        "required": ["first_book_title"]
      },
      "description": "Record second page information"
    },
    {
      "action": "act",
      "prompt": "Go to page 3 by clicking the next button again",
      "description": "Navigate to page 3"
    },
    {
      "action": "act_with_schema",
      "prompt": "Extract information about 3 books from this page",
      "schema": {
        "type": "object",
        "properties": {
          "current_page": {"type": "number"},
          "books": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "title": {"type": "string"},
                "price": {"type": "string"}
              },
              "required": ["title"]
            }
          }
        },
        "required": ["current_page", "books"]
      },
      "description": "Extract data from page 3"
    },
    {
      "action": "act",
      "prompt": "Click on the first book to view its details page",
      "description": "Navigate to book detail page"
    },
    {
      "action": "act_with_schema",
      "prompt": "Extract all the details about this book: title, price, availability, description, product information",
      "schema": {
        "type": "object",
        "properties": {
          "title": {"type": "string"},
          "price": {"type": "string"},
          "availability": {"type": "string"},
          "description": {"type": "string"},
          "upc": {"type": "string"},
          "product_type": {"type": "string"},
          "number_of_reviews": {"type": "number"}
        },
        "required": ["title", "price"]
      },
      "description": "Extract detailed book information"
    },
    {
      "action": "act",
      "prompt": "Go back to the book listing page using the browser back button or breadcrumb navigation",
      "description": "Navigate back to list"
    },
    {
      "action": "act_with_schema",
      "prompt": "Confirm we're back on the books listing page - what page number are we on?",
      "schema": {
        "type": "object",
        "properties": {
          "on_listing_page": {"type": "boolean"},
          "current_page_number": {"type": "number"}
        },
        "required": ["on_listing_page"]
      },
      "description": "Verify navigation back"
    },
    {
      "action": "act",
      "prompt": "Navigate back to the home page using the home link or Books logo",
      "description": "Return to homepage"
    },
    {
      "action": "act_with_schema",
      "prompt": "Confirm we're on the homepage and verify what page elements are visible",
      "schema": {
        "type": "object",
        "properties": {
          "on_homepage": {"type": "boolean"},
          "has_categories": {"type": "boolean"},
          "has_books": {"type": "boolean"},
          "page_title": {"type": "string"}
        },
        "required": ["on_homepage"]
      },
      "description": "Verify we returned to homepage"
    }
  ]
}
