{
  "name": "Information Extraction Demo",
  "description": "Extract structured information from web pages using schemas - demonstrates books, news, products, and boolean extraction",
  "starting_page": "https://books.toscrape.com/",
  "abort_on_error": false,
  "steps": [
    {
      "action": "act_with_schema",
      "prompt": "Navigate to the Travel category if available, then extract information about the first 5 books shown including title, author, and price",
      "schema": {
        "type": "object",
        "properties": {
          "books": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "title": {"type": "string"},
                "author": {"type": "string"},
                "price": {"type": "string"}
              },
              "required": ["title", "author"]
            }
          }
        },
        "required": ["books"]
      },
      "description": "Extract book catalog information"
    },
    {
      "action": "act",
      "prompt": "Navigate to https://news.ycombinator.com/",
      "description": "Go to news site"
    },
    {
      "action": "act_with_schema",
      "prompt": "Extract the top 5 news headlines with their titles and any available summaries or points",
      "schema": {
        "type": "object",
        "properties": {
          "articles": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "headline": {"type": "string"},
                "points": {"type": "string"},
                "author": {"type": "string"}
              },
              "required": ["headline"]
            }
          }
        },
        "required": ["articles"]
      },
      "description": "Extract news headlines"
    },
    {
      "action": "act",
      "prompt": "Navigate to https://example.com",
      "description": "Go to simple test page"
    },
    {
      "action": "act_with_schema",
      "prompt": "Is there a heading on this page?",
      "schema": {
        "type": "object",
        "properties": {
          "has_heading": {"type": "boolean"}
        },
        "required": ["has_heading"]
      },
      "description": "Boolean extraction - check for heading"
    },
    {
      "action": "act_with_schema",
      "prompt": "Does this page contain the word 'Example' in the heading?",
      "schema": {
        "type": "object",
        "properties": {
          "contains_example": {"type": "boolean"}
        },
        "required": ["contains_example"]
      },
      "description": "Boolean extraction - check for specific word"
    }
  ]
}
