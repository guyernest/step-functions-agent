{
  "name": "Progressive Escalation Test",
  "description": "Demonstrates progressive escalation - click link on example.com",
  "llm_provider": "openai",
  "llm_model": "gpt-4o-mini",
  "starting_page": "https://example.com",
  "abort_on_error": true,
  "steps": [
    {
      "action": "wait",
      "description": "Wait for page to load",
      "duration": 2000
    },
    {
      "action": "screenshot",
      "description": "Screenshot before click",
      "save_to": "escalation_test_before.png"
    },
    {
      "action": "click",
      "description": "Click 'More information' link with escalation",
      "escalation_chain": [
        {
          "method": "playwright_locator",
          "locator": {
            "strategy": "text",
            "value": "More information"
          },
          "confidence_threshold": 0.9,
          "comment": "Try text match first - free and fast"
        },
        {
          "method": "playwright_locator",
          "locator": {
            "strategy": "selector",
            "value": "a[href]"
          },
          "confidence_threshold": 0.85,
          "comment": "Try any link selector second"
        },
        {
          "method": "vision_find_element",
          "prompt": "Find the 'More information' link on this page.",
          "prefer": "selector",
          "fallback": "coordinates",
          "confidence_threshold": 0.7,
          "comment": "Only use vision if Playwright methods fail - costs $0.01"
        }
      ]
    },
    {
      "type": "wait_for_load_state",
      "description": "Wait for navigation to complete",
      "state": "networkidle"
    },
    {
      "action": "screenshot",
      "description": "Screenshot after click",
      "save_to": "escalation_test_after.png"
    }
  ]
}
