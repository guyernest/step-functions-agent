{
  "name": "Product Search and Extraction",
  "description": "Search for products and extract pricing information using Nova Act",
  "starting_page": "https://www.amazon.com",
  "abort_on_error": false,
  "steps": [
    {
      "action": "act",
      "prompt": "Search for 'laptop' in the search bar and submit the search",
      "description": "Search for laptops"
    },
    {
      "action": "act_with_schema",
      "prompt": "Extract the first 3 laptop products with their titles and prices",
      "schema": {
        "type": "object",
        "properties": {
          "products": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "title": {"type": "string"},
                "price": {"type": "string"},
                "rating": {"type": ["number", "null"]}
              },
              "required": ["title"]
            }
          }
        },
        "required": ["products"]
      },
      "description": "Extract product information"
    },
    {
      "action": "act",
      "prompt": "Click on the first product to view its details",
      "description": "Navigate to product page"
    },
    {
      "action": "act_with_schema",
      "prompt": "Is this product currently in stock and available for purchase?",
      "schema": {
        "type": "object",
        "properties": {
          "in_stock": {"type": "boolean"},
          "delivery_info": {"type": ["string", "null"]}
        },
        "required": ["in_stock"]
      },
      "description": "Check availability"
    },
    {
      "action": "screenshot",
      "description": "Capture product page"
    }
  ]
}
