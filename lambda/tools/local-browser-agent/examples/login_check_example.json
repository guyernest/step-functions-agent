{
  "name": "Login Status Check",
  "description": "Check if user is logged into a website using Nova Act",
  "starting_page": "https://github.com",
  "abort_on_error": false,
  "steps": [
    {
      "action": "act_with_schema",
      "prompt": "Am I currently logged in to GitHub?",
      "schema": {"type": "boolean"},
      "description": "Check login status"
    },
    {
      "action": "act_with_schema",
      "prompt": "If logged in, what is my username? If not logged in, return null",
      "schema": {
        "type": "object",
        "properties": {
          "username": {"type": ["string", "null"]},
          "logged_in": {"type": "boolean"}
        },
        "required": ["logged_in"]
      },
      "description": "Get user info if logged in"
    },
    {
      "action": "screenshot",
      "description": "Capture current page state"
    }
  ]
}
