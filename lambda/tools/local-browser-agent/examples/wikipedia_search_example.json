{
  "name": "Wikipedia Information Extraction",
  "description": "Search Wikipedia and extract structured information using Nova Act",
  "starting_page": "https://www.wikipedia.org",
  "abort_on_error": true,
  "steps": [
    {
      "action": "act",
      "prompt": "Search for 'Artificial Intelligence' and click on the first result",
      "description": "Navigate to AI article"
    },
    {
      "action": "act_with_schema",
      "prompt": "Extract the first paragraph summary of what Artificial Intelligence is",
      "schema": {
        "type": "object",
        "properties": {
          "summary": {"type": "string"},
          "word_count": {"type": "integer"}
        },
        "required": ["summary"]
      },
      "description": "Extract AI definition"
    },
    {
      "action": "act_with_schema",
      "prompt": "Is there a table of contents visible on this page?",
      "schema": {"type": "boolean"},
      "description": "Check for table of contents"
    },
    {
      "action": "act",
      "prompt": "Scroll down to the 'History' section",
      "description": "Navigate to history section"
    },
    {
      "action": "screenshot",
      "description": "Capture the history section"
    }
  ]
}
