{
  "tool_name": "{{tool_name}}",
  "description": "{{description}}",
  "input_schema": {
    "type": "object",
    "properties": {
      {{#each input_schema.properties}}
      "{{@key}}": {
        "type": "{{this.property_type}}"{{#if this.description}},
        "description": "{{this.description}}"{{/if}}{{#if this.pattern}},
        "pattern": "{{this.pattern}}"{{/if}}{{#if this.enum_values}},
        "enum": [{{#each this.enum_values}}"{{this}}"{{#unless @last}}, {{/unless}}{{/each}}]{{/if}}
      }{{#unless @last}},{{/unless}}
      {{/each}},
      "profile_name": {
        "type": "string",
        "description": "Browser profile to use (fixed)",
        "default": "{{browser_config.profile_name}}"
      },
      "timeout": {
        "type": "integer",
        "description": "Execution timeout in seconds",
        "default": {{browser_config.timeout}}
      }
    },
    "required": [{{#each required_input_fields}}"{{this}}"{{#unless @last}}, {{/unless}}{{/each}}]
  }
}
