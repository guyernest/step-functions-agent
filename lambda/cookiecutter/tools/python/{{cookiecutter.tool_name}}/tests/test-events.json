{
  "smoke_test": {
    "description": "Basic functionality test for {{cookiecutter.tool_name}}",
    "input": {
      "{{cookiecutter.input_param_name}}": "{{cookiecutter.input_test_value}}"
    },
    "expected_output": {
      "validation_type": "contains",
      "value": "tool_result"
    },
    "metadata": {
      "timeout": 30000,
      "tags": ["smoke", "basic"]
    }
  },
  "edge_case_empty_input": {
    "description": "Test with empty input parameter",
    "input": {
      "{{cookiecutter.input_param_name}}": ""
    },
    "expected_output": {
      "validation_type": "contains",
      "value": "error"
    },
    "metadata": {
      "timeout": 30000,
      "tags": ["edge_case", "error_handling"]
    }
  },
  "integration_test": {
    "description": "Integration test with realistic data",
    "input": {
      "{{cookiecutter.input_param_name}}": "realistic_test_value"
    },
    "expected_output": {
      "validation_type": "schema",
      "value": {
        "type": "object",
        "properties": {
          "type": {"type": "string", "const": "tool_result"},
          "name": {"type": "string"},
          "tool_use_id": {"type": "string"},
          "content": {"type": "string"}
        },
        "required": ["type", "name", "tool_use_id", "content"]
      }
    },
    "metadata": {
      "timeout": 60000,
      "tags": ["integration", "full_test"]
    }
  }
}